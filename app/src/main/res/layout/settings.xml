<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#171738"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/settings"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white" />
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:id="@+id/LanguageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Change_language"
        android:layout_marginTop="20dp"
         />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <ImageView
            android:contentDescription="@string/french_flag"
            android:id="@+id/flag_fr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:src="@drawable/flag_french" />

        <ImageView
            android:contentDescription="@string/english_flag"
            android:id="@+id/flag_en"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:src="@drawable/flag_english" />

    </LinearLayout>
    <TextView
        android:id="@+id/languageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Change_color"
        android:layout_marginTop="20dp"
        />
    <GridView
        android:id="@+id/colorsInGrid"
        android:layout_width="match_parent"
        android:layout_height="228dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:numColumns="4"
        android:verticalSpacing="10dp" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <Button
        android:id="@+id/goBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/validate" />

</LinearLayout>
