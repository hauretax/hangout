<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="50dp"
    android:gravity="center">

    <ImageButton
        android:id="@+id/buttonSelectPhoto"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/select_picture"
        android:scaleType="centerCrop"
        android:src="@drawable/default_profile_picture"
        android:background="@android:color/transparent"
        android:onClick="onSelectPhotoButtonClick" />

    <com.example.fthangoutv03.CustomInput
        android:id="@+id/phone_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelText="@string/phone"
        app:hintText="@string/enter_phone" />

    <com.example.fthangoutv03.CustomInput
        android:id="@+id/firstname_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelText="@string/firstname"
        app:hintText="@string/enter_firstname" />

    <com.example.fthangoutv03.CustomInput
        android:id="@+id/lastname_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelText="@string/lastname"
        app:hintText="@string/put_lastname" />

    <Button
        android:id="@+id/rec_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rec"/>
</LinearLayout>