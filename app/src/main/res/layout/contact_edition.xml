<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#171738"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contacte_edition"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white"
            android:id="@+id/toolbar_title"
            android:layout_gravity="center"/>
    </androidx.appcompat.widget.Toolbar>

    <ImageButton
        android:id="@+id/buttonSelectPhoto"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/select_picture"
        android:scaleType="centerCrop"
        android:src="@drawable/default_profile_picture"
        android:background="@android:color/transparent"
        android:onClick="onSelectPhotoButtonClick"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"/>

    <com.example.fthangoutv03.CustomInput
        android:id="@+id/phone_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:labelText="@string/phone"
        app:hintText="@string/enter_phone"
        app:layout_constraintTop_toBottomOf="@id/buttonSelectPhoto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"/>

    <com.example.fthangoutv03.CustomInput
        android:id="@+id/firstname_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:labelText="@string/firstname"
        app:hintText="@string/enter_firstname"
        app:layout_constraintTop_toBottomOf="@id/phone_input"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"/>

    <com.example.fthangoutv03.CustomInput
        android:id="@+id/lastname_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:labelText="@string/lastname"
        app:hintText="@string/put_lastname"
        app:layout_constraintTop_toBottomOf="@id/firstname_input"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"/>

    <Button
        android:id="@+id/rec_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rec"
        app:layout_constraintTop_toBottomOf="@id/lastname_input"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
